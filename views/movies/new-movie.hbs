<h2>New Movies</h2>

<section>
<form method="POST" action="/movies/create">
<label> Title:
        <input type="text" name="title" />
    </label>

  <label> Genre:
        <input type= "text" name = "genre"/>
    </label>

<label> Plot:
        <input type= "text" name = "plot"/>
    </label>

<label> Cast:
    <select name="name"  multiple>
  {{#each celebrities}}
<option value={{this._id}} cols=" 30" rows="4">{{this.name}}</option>
   {{/each}}
    </select>
    </label>
   
<button type="submit">Create</button>
</form>
</section>