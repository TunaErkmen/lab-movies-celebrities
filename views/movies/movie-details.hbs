<h2>Movie Details</h2>

<section>
  <h2> {{title}}</h2>
  <br />
  <p>
    Genre: {{genre}} <br />
    Plot: {{plot}} <br />
  
  </p>

  {{#each movie.cast}}
    <p>
        Celebrity: {{this.name}} <br>
        Occupation: {{this.occupation}} <br>
        Catch Phrase: "{{this.catchPhrase}}" 
    </p>
{{/each}}

  <form action="/movies/{{_id}}/delete" method="POST">
    <button type="submit">Delete</button>
  </form>
 <a href="/movies/{{this._id}}/edit-movie" method="POST"> Edit</a>
</section>